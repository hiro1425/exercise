<div class="items-sell-contents">
  <div class="items-sell-main">
    <h2 class="items-sell-title">運動記録の情報を入力</h2>
    <%= form_with model: @post, url: post_path, local: true do |f| %>

    <%= render partial: 'shared/error_messages', locals: { model: f.object } %>

    <div class="new-items">
      <div class="weight-bold-text">
        記録タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :title, class:"posts-text", id:"posts-text", placeholder:"タイトル" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          テキスト
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :text, class:"posts-text", id:"post-info", placeholder:"テキスト", rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <div class="items-detail">
      <div class="weight-bold-text">記録の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          場所
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:place_id, Place.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
      <div class="form">
        <div class="weight-bold-text">
          実施日
          <span class="indispensable">必須</span>
        </div>
        <div class='input-execution-wrap'>
          <%= raw sprintf(
                  f.date_select(
                    :execution_date,
                    class:'select-day',
                    id:"execution-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2023,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
    </div>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"post-btn" %>
      <%= link_to 'もどる', post_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>
</div>
