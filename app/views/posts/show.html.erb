<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @post.title%>
      </p>
      <%= link_to "by #{@post.user.nickname}", '#', class: :prototype__user %>
      <% if current_user == @post.user %>
        <div class="prototype__manage">
          <%= link_to "編集する", '#', class: :prototype__btn %>
          <%= link_to "削除する", '#', data: { turbo_method: :delete }, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">テキスト</p>
          <p class="detail__message">
            <%= @post.text %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">カテゴリー</p>
          <p class="detail__message">
            <%= @post.category.name %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">場所</p>
          <p class="detail__message">
            <%= @post.place.name %>
          </p>
        </div>
        <div class="post_execution">
          <p class="detail__title">実施日</p>
          <p class="detail__message">
            <%= @post.execution_date %>
          </p>
      </div>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
        <%# if user_signed_in? %>
          <%#= form_with model: [@post, @comment], local: true do |f|%>
            <%#div class="field">
              <%= f.label :content, "コメント" %><%#br />
              <%#%= f.text_field :content, id:"comment_content" %>
            <%#/div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            <%#/div>
          <% end %>
        <%# end %>
        <%# // ログインしているユーザーには上記を表示する %>
        <%#ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
          <%# @comments.each do |comment| %>
            <%#li class="comments_list">
              <%= comment.content %>
              <%#= link_to "(#{comment.user.name})", user_path(comment.user), class: :comment_user %>
            <%#/li>
          <%# end %>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
